worker_processes 1;

events {
    worker_connections 1024;
}

http {
    # Captura o subdom√≠nio antes de "${SOURCE_DOMAIN}"
    map $host $subdomain {
        default "";
        ~^(?<sub>[^.]+)\.${SOURCE_DOMAIN}$ $sub;
    }

    server {
        listen 80;
        server_name _;

        location / {
            if ($subdomain = "") {
                return 400 "Invalid host";
            }

            return 301 https://$subdomain.${TARGET_DOMAIN}$request_uri;
        }
    }
}
